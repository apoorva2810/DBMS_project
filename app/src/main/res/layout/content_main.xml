<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.apoorvasingh2810.dbmsproject.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/btnViewRecords"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:text="View Records"
        app:layout_constraintEnd_toEndOf="@+id/btnAddRecords"
        app:layout_constraintStart_toStartOf="@+id/btnAddRecords"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddRecords"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Add Record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewRecords" />

    <Button
        android:id="@+id/btnDeleteRecords"
        android:layout_width="140dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="27dp"
        android:text="Delete Record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddRecords" />

    <Button
        android:id="@+id/btnSearchRecords"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Search Record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteRecords" />
</android.support.constraint.ConstraintLayout>
